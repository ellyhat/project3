<!--Template to display schedules in SQL database-->

<!--Code to map integer input to days of week, 1 is Monday, 2 is Tuesday etc...-->
<% const daysOfWeek=['Monday', 'Tuesday' , 'Wednesday' , 'Thursday' , 'Friday' , 'Saturday' , 'Sunday' ] %>

    <h1> List of Schedules </h1>
    <table>
        <tr>
            <th>Name</th>
            <th>Day</th>
            <th>Start Time</th>
            <th>End Time</th>
        </tr>
        <% for(let i=0; i < scheduleTable.length; i++) { %>
            <tr>
                <td>
                    <%=scheduleTable[i].user_name %>
                </td>
                <td>
                    <%= daysOfWeek[scheduleTable[i].day -1] %>
                </td>
                <td>
                    <%=scheduleTable[i].start_time %>
                </td>
                <td>
                    <%=scheduleTable[i].end_time %>
                </td>
            </tr>
            <%} %>
    </table>